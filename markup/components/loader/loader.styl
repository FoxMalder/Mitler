.loader
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 30
    background-color dark-color
    &__pulse
        position relative
        top 50%
        left 50%
        width 5rem
        height 5rem
        transform translate(-50%, -50%)
        &::before, &::after
            position absolute
            content ''
            width 5rem
            height 5rem
            border 5px solid accent-color
            border-radius 50%
        &::before
            animation pulse-outer .8s infinite
        &::after
            animation pulse-inner .8s infinite

@keyframes pulse-outer{
    0% {
        opacity 1
    }
    50% {
        opacity .5
    }
    100% {
        opacity 0
    }
}
@keyframes pulse-inner{
    0%{
        opacity 0
        transform scale(0, 0)
    }
    100%{
        opacity 1
        transform scale(1, 1)
    }
}

.header-line
    position absolute
    
    &__contacts
        color white
    &__socials
        display flex
        flex-direction column
    
    &_right
        display flex
        top 0
        right 0
        height 100%
        padding 0 .8rem
        flex-direction column
        justify-content center
        border-left 1px solid alpha(#fff,.1)
        
    &_bottom
        bottom 0
        right 0
        width 100%
        padding .8rem 0
        border-top 1px solid alpha(#fff,.1)
    

        

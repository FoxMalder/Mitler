.promo
    &__header
        position relative
    &__suptitle
        display flex
        align-items center
        margin 0
        &::before, &::after
            content ''
            display inline-block
            position relative
            width 100%
            height 1px
            background-color white
    &__suptitle-text
        font-family MainFont
        font-size small-size
        text-transform uppercase
        white-space nowrap
        margin 0 .5rem
    &__title
        font-family MainFontThin
        font-size giant-size
        font-weight 100
        line-height 1.6
        text-transform uppercase
        margin 0
        border-bottom 1px solid white
    &__subtitle
        margin-top 1.563rem
        text-transform uppercase
        font-weight 600
        font-family MainFontBold
        .fa
            font-size tiny-font
            margin-right .6rem
            color grey-color
            &:last-child
                margin-left .6rem
                margin-right 0
    &__descr
        margin-top 2.5rem
        font-family MainFont
    &__descr-name-company
        font-weight 900
    &__button
        margin-top 1.563rem

colors = blue-color red-color accent-color
#services-carousel .owl-item
    for color,i in colors
        &:nth-child({i+1}n)
            background-color color
#services-carousel
    .owl-carousel
        .owl-item
            backface-visibility inherit
    .owl-item:nth-child(odd)
        .services__service-item
            flex-direction column
    .owl-nav
        position absolute
        top 0
        width 100%
        > div
            width 4.2rem
            height 4.2rem
            background-color #fff
            color dark-color
            position absolute
            text-align center
            line-height 4rem
            font-size 1.625rem
            &.owl-prev
                left 0
            &.owl-next
                right 0


.fotorama__nav
    &-wrap
        position absolute
        width 100%
        bottom 1rem
        padding 0 1rem

.fotorama
    &__thumb
        border 4px solid white
        transition border-color .5s ease
        &-border
            border-color darken(accent-color,60)
            border-width 4px
    &__active
        .fotorama__thumb
            border-color darken(accent-color,60)
    &__nav:after, &_stage:after,
    &__nav:before, &_stage:before
        display none
    &__arr
        &--next,&--prev
            &:before
                font-family fontawesome
                font-size 32px
                color white
        &--next
            &:before
                content '\f105'
        &--prev
            left 20px
            &:before
                content '\f104'

#feedbacks-carousel
    .owl-dots
        width 100%
        text-align center
        margin-top 3.5rem
        .owl-dot 
            width .5rem
            height .5rem
            background-color white
            border-radius 50%
            display inline-block
            margin .5rem
            transition background-color .5s, transform .2s
            &.active
                transform scale(1.3)
                background-color accent-color

#partners-carousel
    .owl-stage
        display flex
    .owl-item
        margin-top 1rem
        img 
            max-width 100%
            width auto
    .owl-nav
        position absolute
        top 0
        width 100%
        z-index 2
        > div
            position absolute
            top 3rem
            font-size 2rem
            padding 0 1rem
            &.owl-prev
                left -3.75rem
                transition opacity .5s
                &:hover
                    opacity .5
            &.owl-next
                right -3.75rem
                transition opacity .5s
                &:hover
                    opacity .5

